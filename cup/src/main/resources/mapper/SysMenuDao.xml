<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lvcoding.dao.SysMenuDao">

    <resultMap type="com.lvcoding.entity.SysMenu" id="SysMenuMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="menuPid" column="menu_pid" jdbcType="INTEGER"/>
        <result property="menuPids" column="menu_pids" jdbcType="VARCHAR"/>
        <result property="menuName" column="menu_name" jdbcType="VARCHAR"/>
        <result property="url" column="url" jdbcType="VARCHAR"/>
        <result property="permission" column="permission" jdbcType="VARCHAR"/>
        <result property="isLeaf" column="is_leaf" jdbcType="INTEGER"/>
        <result property="level" column="level" jdbcType="INTEGER"/>
        <result property="icon" column="icon" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="sort" column="sort" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="delFlag" column="del_flag" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="queryNoJoin">
      id, menu_pid, menu_pids, menu_name, url, type, permission, is_leaf, level, icon, status, sort, create_time, update_time, del_flag
    </sql>

    <sql id="queryJoin">
        m.id, m.menu_pid, m.menu_pids, m.menu_name, m.url, m.permission,m.type, m.is_leaf, m.level, m.icon, m.status, m.sort, m.create_time, m.update_time, m.del_flag
    </sql>


    <!--查询单个-->
    <select id="queryById" resultMap="SysMenuMap">
        select
        <include refid="queryNoJoin"/>
        from sys_menu
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysMenuMap">
        select
        <include refid="queryNoJoin"/>
        from sys_menu
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysMenuMap">
        select
        <include refid="queryNoJoin"/>
        from sys_menu
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="menuPid != null">
                and menu_pid = #{menuPid}
            </if>
            <if test="menuPids != null and menuPids != ''">
                and menu_pids = #{menuPids}
            </if>
            <if test="menuName != null and menuName != ''">
                and menu_name = #{menuName}
            </if>
            <if test="url != null and url != ''">
                and url = #{url}
            </if>
            <if test="permission != null and permission != ''">
                and permission = #{permission}
            </if>
            <if test="isLeaf != null">
                and is_leaf = #{isLeaf}
            </if>
            <if test="level != null">
                and level = #{level}
            </if>
            <if test="icon != null and icon != ''">
                and icon = #{icon}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="delFlag != null">
                and del_flag = #{delFlag}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sys_menu(menu_pid, menu_pids, menu_name, url, permission, is_leaf, level, icon, status, sort, create_time, update_time, del_flag)
        values (#{menuPid}, #{menuPids}, #{menuName}, #{url}, #{permission}, #{isLeaf}, #{level}, #{icon}, #{status}, #{sort}, #{createTime}, #{updateTime}, #{delFlag})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sys_menu
        <set>
            <if test="menuPid != null">
                menu_pid = #{menuPid},
            </if>
            <if test="menuPids != null and menuPids != ''">
                menu_pids = #{menuPids},
            </if>
            <if test="menuName != null and menuName != ''">
                menu_name = #{menuName},
            </if>
            <if test="url != null and url != ''">
                url = #{url},
            </if>
            <if test="permission != null and permission != ''">
                permission = #{permission},
            </if>
            <if test="isLeaf != null">
                is_leaf = #{isLeaf},
            </if>
            <if test="level != null">
                level = #{level},
            </if>
            <if test="icon != null and icon != ''">
                icon = #{icon},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="delFlag != null">
                del_flag = #{delFlag},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sys_menu where id = #{id}
    </delete>


    <!--通过角色名称list查询菜单权限-->
    <select id="loadPermissionByRoleCode" resultMap="SysMenuMap">
        select
        <include refid="queryJoin"/>
        from sys_menu m
        left join sys_role_menu rm on m.id = rm.menu_id
        left join sys_role r on r.id = rm.role_id
        where r.role_code in
        <foreach collection="permissions" item="permission" open="(" separator="," close=")">
            #{permission}
        </foreach>
    </select>


    <!--通过角色id获取菜单列表-->
    <select id="findMenuByRoleIds" resultMap="SysMenuMap">
        select
        <include refid="queryJoin"/>
        from sys_menu m
        left join sys_role_menu rm on rm.menu_id = m.id
        where rm.role_id in
        <foreach collection="roleIds" item="roleId" open="(" separator="," close=")">
            #{roleId}
        </foreach>
    </select>

</mapper>
