<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lvcoding.dao.SysRoleMapper">

    <resultMap type="com.lvcoding.entity.SysRole" id="SysRoleMap">
        <result property="id" column="id"/>
        <result property="roleName" column="role_name" />
        <result property="roleCode" column="role_code" />
        <result property="sort" column="sort" />
        <result property="status" column="status" />
        <result property="updateTime" column="update_time" />
        <result property="createTime" column="create_time" />
        <result property="delFlag" column="del_flag" />
        <result property="remark" column="remark" />
        <result property="createBy" column="create_by" />
        <result property="updateBy" column="update_by" />
    </resultMap>

    <sql id="Base_Column_List">
        iid, role_name, role_code, sort, status, update_time, create_time, del_flag, remark,
        create_by, update_by, remark
    </sql>

    <!--查询单个-->
    <select id="queryById" resultMap="SysRoleMap">
        select
        <include refid="Base_Column_List"/>
        from sys_role
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysRoleMap">
        select
        <include refid="Base_Column_List"/>
        from sys_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysRoleMap">
        select
        <include refid="Base_Column_List"/>
        from sys_role
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="roleName != null and roleName != ''">
                and role_name = #{roleName}
            </if>
            <if test="roleCode != null and roleCode != ''">
                and role_code = #{roleCode}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="delFlag != null">
                and del_flag = #{delFlag}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sys_role(role_name, role_code, sort, status, update_time, create_time, del_flag)
        values (#{roleName}, #{roleCode}, #{sort}, #{status}, #{updateTime}, #{createTime}, #{delFlag})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sys_role
        <set>
            <if test="roleName != null and roleName != ''">
                role_name = #{roleName},
            </if>
            <if test="roleCode != null and roleCode != ''">
                role_code = #{roleCode},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="delFlag != null">
                del_flag = #{delFlag},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sys_role where id = #{id}
    </delete>

    <!--通过用户名查询权限-->
    <select id="loadRolesByUsername" resultMap="SysRoleMap">
        select r.id, r.role_code ,r.role_name, r.status
        from sys_role r,
        sys_user_role ur,
        sys_user u where r.id = ur.role_id and u.id = ur.user_id
        and u.username = #{username}
    </select>

    <!--通过角色id删除关联表-->
    <delete id="deleteSysRoleMenuById">
        delete from sys_role_menu where role_id = #{roleId}
    </delete>

    <!-- 通过角色id查询菜单id集合-->
    <select id="findMenuIds" resultType="java.lang.Integer">
        select menu_id from sys_role_menu where role_id = #{roleId}
    </select>

    <!--保存权限-->
    <insert id="saveRoleMenu">
        insert into sys_role_menu (role_id, menu_id) values
        <foreach collection="menuIds" item="menuId" separator=",">
            (#{roleId},#{menuId})
        </foreach>
    </insert>


    <delete id="deleteRoleMenu">
        delete from sys_role_menu where role_id = #{roleId}
    </delete>

</mapper>
